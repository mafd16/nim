  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "csslint": "^1.0.5",
    "eslint": "^4.10.0",
    "eslint-plugin-react": "^7.4.0",
    "htmlhint": "^0.9.13",
    "jsonlint": "^1.6.2",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "stylelint": "^8.2.0"
  }
